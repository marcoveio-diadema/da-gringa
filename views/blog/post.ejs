<!-- SECTION HEADER -->
<section class="section-heading" style="background-image: url(<%= post.img_background %>);">
    <!-- text on landing page -->
    <div class="landing-page">
        <h1 class="index-text"><%= post.title %></h1>
    </div>
</section>

<!-- SECTION POST -->
<section class="section-post">
    <div class="container">
        <div class="row">
            <!-- LEFT SIDE (posts)-->
            <div class="col-md-9 mt-3 py-3">
                <!-- post intro -->
                <h4 class=""><%= post.intro %></h4>
                <!-- post details -->
                <div class="container">
                    <div class="row text-center">
                        <div class="col-4">
                            <p class=""><small class="">Por: <strong><%= post.author_username %></strong></small></p>
                        </div>
                        <div class="col-4">
                            <p class="small">Postado: <%= post.created_at.toLocaleDateString('pt-BR'); %> <br>
                               <% if (post.updated_at) { %>
                                <span>Atualizado: <%= post.updated_at.toLocaleDateString('pt-BR') %> </span>
                               <% } %>
                            </p>
                        </div>
                        <div class="col-4">
                            <a class="link-body-emphasis" href="#">
                                <i class="fa-brands fa-whatsapp"></i>
                            </a>
                            <a class="link-body-emphasis" href="#">
                                <i class="fa-brands fa-x-twitter"></i>
                            </a>
                            <a class="link-body-emphasis" href="#">
                                <i class="fa-brands fa-facebook"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <hr>
                <!-- post content -->
                <div class="post-content my-3 px-3">
                    <p><%- post.content %></p>                
                </div>
            </div>
            <!-- RIGHT SIDE (categories, subscribe, search and about)-->
            <div class="col-md-3 mt-3 py-3">
                <!-- categories -->
                <h2 class="section-title text-center">Categorias:</h2>
                <div class="categories my-3 py-3">
                    <ul class="list-group">
                        <% categories.forEach(category => { %>
                            <a href="/blog/category/<%= category.id %>">
                                <li class="list-group-item"><%= category.category %></li>
                            </a>
                        <% }) %>
                    </ul>
                </div>
                <!-- search -->
                <h2 class="section-title text-center">Busca r√°pida:</h2>
                <div class="search my-3 py-3">
                    <form action="">
                        <input type="text" class="form-control" placeholder="Search...">
                        <button class="btn btn-primary mt-2">Search</button>
                    </form>
                </div>
                <!-- subscribe -->
                <h2 class="section-title text-center">Subscribe:</h2>
                <div class="subscribe my-3 py-3">
                    <form action="">
                        <input type="email" class="form-control" placeholder="Your email...">
                        <button class="btn btn-primary mt-2">Subscribe</button>
                    </form>
                </div>
                <!-- about -->
                <h2 class="section-title text-center">Sobre:</h2>
                <div class="about my-3 py-3">
                    <img src="/img/marcus_1.jpg" class="img-fluid rounded mb-3" alt="">
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Doloribus suscipit optio ad voluptatem ea amet, ex architecto est fuga fugiat?</p>
                </div>
            </div>
        </div>
    </div>
</section>